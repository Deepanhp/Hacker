<p id="notice"><%= notice %></p>

<h1>Links</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Url</th>
      <th>Created at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @links.each do |link| %>
      <tr>
        <td><%= link.name %></td>
        <td><%= link.url %></td>
        <td><%= time_ago_in_words(link.created_at)+ " ago" %> </td>
        <td><%= link_to 'Show', link %></td>
        <% if link.user_id == current_user.id %>
          <td><%= link_to 'Edit', edit_link_path(link) %></td>
          <td><%= link_to 'Destroy', link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end%>
        <td><%= link.get_upvotes.size %>
          <%= link_to 'Like',  like_link_path(link.id), method: :put %></td>
        <td>
          <%= link.get_downvotes.size %><%= link_to 'Disike',  dislike_link_path(link.id), method: :put %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Link', new_link_path %>
